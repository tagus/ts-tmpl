{
  "name": "ts-tmpl",
  "private": true,
  "version": "1.0.0",
  "description": "basic template repo for typescript projects",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "start:client": "pnpm --filter client start:dev",
    "build:client": "pnpm --filter client build:prod",
    "start:server": "pnpm --filter server start:dev",
    "build:server": "pnpm --filter server build:prod",
    "start:server:prod": "pnpm --filter server start:prod",
    "build:image": "docker build -t ts-tmpl-server ."
  }
}