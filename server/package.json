{
  "name": "server",
  "version": "1.0.0",
  "description": "web server for ts-tmpl project",
  "scripts": {
    "build:prod": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start:dev": "ts-node --project tsconfig.json --require tsconfig-paths/register ./src/index.ts",
    "start:prod": "node ./dist/index.js"
  },
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "camelcase-keys": "^9.1.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.3"
  }
}
